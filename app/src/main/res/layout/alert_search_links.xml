<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tv_header_person_person_link"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="جستجو لینک"
                android:textColor="#fff"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_closedialog_search_person_link"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/close_dialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/edt_psp_name_absent_link"
            style="@style/edt_item_search"
            android:background="@drawable/round_search"
            android:hint="نام شرکت پرداخت"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20" />

        <EditText
            android:id="@+id/edt_terminal_absent_link"
            style="@style/edt_item_search"
            android:hint="شماره ترمینال"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1" />

        <EditText
            android:id="@+id/edt_merchant_absent_link"
            style="@style/edt_item_search"
            android:hint="شماره پذیرنده"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1" />


        <EditText
            android:id="@+id/edt_psp_type_absent_link"
            style="@style/edt_item_search"
            android:hint="نوع Psp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:visibility="gone"
            android:maxLength="10"
            android:maxLines="1" />


        <Button
            android:id="@+id/btn_submit_search_person_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_order_submit_btn"
            android:text="جستجو"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</ScrollView>