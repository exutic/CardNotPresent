            android:id="@+id/frag_persons_transaction_list_item_btn_share_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:padding="7dp"
            app:layout_constraintLeft_toLeftOf="@+id/frag_persons_conditions_list_item_btn_expand"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_conditions_list_item_btn_expand"
