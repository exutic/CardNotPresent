        <TextView
            android:id="@+id/frag_persons_conditions_list_item_transaction_status_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="وضعیت تراکنش :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_conditions_list_item_transaction_date_time_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_conditions_list_item_transaction_date_time_header" />
        <TextView
            android:id="@+id/frag_persons_conditions_list_item_transaction_status_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="نوین آرین"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_conditions_list_item_transaction_status_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_conditions_list_item_transaction_date_time_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_conditions_list_item_transaction_status_header" />

        <TextView
            android:id="@+id/frag_persons_conditions_list_item_ref_num_code_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شماره مرجع :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_conditions_list_item_transaction_status_header"
