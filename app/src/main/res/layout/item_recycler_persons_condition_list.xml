            app:layout_constraintTop_toBottomOf="@id/frag_persons_conditions_list_item_user_id_header" />
        <TextView
            android:id="@+id/frag_persons_conditions_list_item_description_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="3516848451"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@id/frag_persons_conditions_list_item_user_id_body"
