<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_dialog_waiting_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_dialog_waiting_txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="کاری که خواسته بودی در حال انجام است. لطفا یک کم صبر کن."
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/alert_dialog_waiting_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:indicatorColor="@android:color/white"
        app:indicatorName="BallGridPulseIndicator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>