<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:layoutDirection="rtl"
    android:padding="8dp"
    app:cardBackgroundColor="#CCFFFFFF"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/frag_link_item_psp_name_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="نام شرکت پرداخت:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frag_link_item_psp_name_body"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="PSP"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_link_item_psp_name_head"
            app:layout_constraintRight_toLeftOf="@+id/frag_link_item_psp_name_head"
            app:layout_constraintTop_toTopOf="@+id/frag_link_item_psp_name_head" />

        <TextView
            android:id="@+id/frag_link_item_psp_type_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شرکت پرداخت :"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/frag_link_item_psp_name_head"
            app:layout_constraintTop_toBottomOf="@id/frag_link_item_psp_name_body" />

        <TextView
            android:id="@+id/frag_link_item_psp_type_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="3651651561"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/frag_link_item_psp_type_head"
            app:layout_constraintRight_toRightOf="@id/frag_link_item_psp_name_body"
            app:layout_constraintTop_toTopOf="@+id/frag_link_item_psp_type_head" />

        <TextView
            android:id="@+id/frag_link_item_payment_link_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="لینک پرداخت :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_link_item_psp_type_head"
            app:layout_constraintTop_toBottomOf="@id/frag_link_item_psp_type_head" />

        <TextView
            android:id="@+id/frag_link_item_payment_link_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text="لینک ندارد"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/frag_link_item_payment_link_head"
            app:layout_constraintRight_toRightOf="@id/frag_link_item_psp_type_body"
            app:layout_constraintTop_toTopOf="@+id/frag_link_item_payment_link_head" />

        <TextView
            android:id="@+id/frag_link_item_merchant_id_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="شماره پذیرنده :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_link_item_payment_link_head"
            app:layout_constraintTop_toBottomOf="@id/frag_link_item_payment_link_head" />

        <TextView
            android:id="@+id/frag_link_item_merchant_id_body"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:gravity="right"
            android:text="65165165"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_link_item_merchant_id_head"
            app:layout_constraintRight_toRightOf="@id/frag_link_item_payment_link_body"
            app:layout_constraintTop_toTopOf="@+id/frag_link_item_merchant_id_head" />

        <TextView
            android:id="@+id/frag_link_item_terminal_id_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شماره ترمینال :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_link_item_merchant_id_head"
            app:layout_constraintTop_toBottomOf="@id/frag_link_item_merchant_id_head" />

        <TextView
            android:id="@+id/frag_link_item_terminal_id_body"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:gravity="right"
            android:text="65165165"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_link_item_terminal_id_head"
            app:layout_constraintRight_toRightOf="@id/frag_link_item_merchant_id_body"
            app:layout_constraintTop_toTopOf="@+id/frag_link_item_terminal_id_head" />


        <FrameLayout
            android:id="@+id/frag_link_raw_btn_share_container"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/frag_link_item_btn_share_raw_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/share_icon" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frag_link_raw_btn_copy_container"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/frag_link_raw_btn_share_container"
            app:layout_constraintRight_toRightOf="@+id/frag_link_raw_btn_share_container"
            app:layout_constraintTop_toBottomOf="@+id/frag_link_raw_btn_share_container">

            <Button
                android:id="@+id/frag_link_item_btn_copy_raw_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/copy_icon" />

        </FrameLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_link_item_terminal_id_body" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>