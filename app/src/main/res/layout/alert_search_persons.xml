<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tv_header_person_person_link"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="جستجو اشخاص"
                android:textColor="#fff"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_closedialog_search_person_link"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/close_dialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/edt_name_search_person_link"
            style="@style/edt_item_search"
            android:background="@drawable/round_search"
            android:hint="نام"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20" />

        <EditText
            android:id="@+id/edt_family_search_person_link"
            style="@style/edt_item_search"
            android:hint="نام خانوادگی"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1" />

        <EditText
            android:id="@+id/edt_national_code_search_person_link"
            style="@style/edt_item_search"
            android:hint="کدملی"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_start_amount_search_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/round_search"
                android:gravity="center"
                android:hint="مبلغ از"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#9A010E30"
                android:textColorHint="#fff" />


            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/edt_end_amount_search_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/round_search"
                android:gravity="center"
                android:hint="مبلغ تا"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#9A010E30"
                android:textColorHint="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_date_search_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/round_search"
                android:gravity="center"
                android:textSize="17sp"
                android:text="تاریخ تراکنش از"
                android:textColor="#fff"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_end_date_search_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/round_search"
                android:gravity="center"
                android:textSize="17sp"
                android:text="تاریخ تراکنش تا"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_submit_search_person_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_order_submit_btn"
            android:text="جستجو"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</ScrollView>