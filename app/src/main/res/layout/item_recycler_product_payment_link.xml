<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:padding="8dp"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="#CCFFFFFF"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/frag_product_item_txt_name_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="نام محصول :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/frag_product_item_txt_name_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="مانیتور"
            android:textSize="14sp"
            android:maxLength="20"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_item_txt_name_header"
            app:layout_constraintRight_toLeftOf="@+id/frag_product_item_txt_name_header"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_name_header" />

        <TextView
            android:id="@+id/frag_product_item_txt_code_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="کد محصول :"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_name_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_item_txt_name_header" />
        <TextView
            android:id="@+id/frag_product_item_txt_code_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="45"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_item_txt_code_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_name_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_code_header" />

        <TextView
            android:id="@+id/frag_product_item_txt_price_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="قیمت(ریال):"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_product_item_txt_code_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_item_txt_code_header" />
        <TextView
            android:id="@+id/frag_product_item_txt_price_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="15000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_item_txt_price_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_code_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_price_header" />

        <TextView
            android:id="@+id/frag_product_payment_item_txt_insert_datetime_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="تاریخ ثبت :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_product_item_txt_price_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_item_txt_price_header" />
        <TextView
            android:id="@+id/frag_product_payment_item_txt_insert_datetime_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="1/4/8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_payment_item_txt_insert_datetime_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_price_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_payment_item_txt_insert_datetime_header" />

        <TextView
            android:id="@+id/frag_product_payment_item_txt_userId_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شناسه کاربر :"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/frag_product_payment_item_txt_insert_datetime_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_payment_item_txt_insert_datetime_header" />
        <TextView
            android:id="@+id/frag_product_payment_item_txt_userId_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="دارد"
            android:visibility="gone"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_payment_item_txt_userId_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_payment_item_txt_insert_datetime_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_payment_item_txt_userId_header" />

        <TextView
            android:id="@+id/frag_product_item_txt_payment_link_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="لینک پرداخت :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_product_payment_item_txt_userId_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_payment_item_txt_userId_header" />
        <TextView
            android:id="@+id/frag_product_item_txt_payment_link_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="25165416"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_item_txt_payment_link_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_payment_item_txt_userId_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_payment_link_header" />

        <TextView
            android:id="@+id/frag_product_item_txt_pspType_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شرکت پرداخت :"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/frag_product_item_txt_payment_link_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_item_txt_payment_link_header" />
        <TextView
            android:id="@+id/frag_product_item_txt_pspType_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="10/10/96"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_product_item_txt_pspType_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_payment_link_body"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_pspType_header" />

        <TextView
            android:id="@+id/frag_product_item_txt_description_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="توضیحات :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_product_item_txt_pspType_header"
            app:layout_constraintTop_toBottomOf="@id/frag_product_item_txt_pspType_header" />
        <TextView
            android:id="@+id/frag_product_item_txt_description_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="3464654"
            android:maxLength="35"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/frag_product_item_txt_description_header"
            app:layout_constraintRight_toRightOf="@id/frag_product_item_txt_pspType_body"/>

        <FrameLayout
            android:id="@+id/frame_share_link"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:padding="7dp"
            app:layout_constraintLeft_toLeftOf="@+id/frag_product_item_btn_expand"
            app:layout_constraintRight_toRightOf="@+id/frag_product_item_btn_expand"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_share_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/share_icon" />

        </FrameLayout>

        <ImageView
            android:id="@+id/frag_product_item_btn_available_link"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/frag_product_item_btn_expand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/frag_product_item_btn_available_link"  />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_product_item_txt_description_body" />

        <LinearLayout
            android:id="@+id/lineare_product"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_product_item_txt_description_body">

            <LinearLayout
                android:id="@+id/linearSharePro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:weightSum="2"
                android:gravity="center"
                android:background="@drawable/txt_background_3"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ارسال لینک پرداخت"
                    android:textColor="#06A70E"
                    android:gravity="center"
                    android:layout_weight="1.6"/>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="#00FFFFFF"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp">

                    <Button
                        android:id="@+id/frag_product_item_btn_share_link2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/share_icon"/>
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/frag_product_item_btn_delete2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delete_icon" />
            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/frag_product_item_l_layout_product"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_product_item_txt_description_body">


            <Button
                android:id="@+id/frag_product_item_txt_create_payment_link"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/txt_background_2"
                android:text="تولید لینک پرداخت"
                android:textColor="#437FED"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="#00FFFFFF">
                <Button
                    android:id="@+id/frag_product_item_imgv_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/share_icon"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="#00FFFFFF">

                <Button
                    android:id="@+id/frag_product_item_imgv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delete_icon"/>
            </FrameLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>