<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:layoutDirection="rtl"
    android:padding="8dp"
    app:cardBackgroundColor="#CCFFFFFF"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/frag_persons_transaction_list_name_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="نام:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_name_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_name_header"
            app:layout_constraintRight_toLeftOf="@+id/frag_persons_transaction_list_name_header"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_name_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_family_name_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="نام خانوادگی:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_name_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_name_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_family_name_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123456"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_family_name_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_name_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_family_name_header" />

        <TextView
            android:id="@+id/frag_persons_person_user_id_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شناسه کابر :"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_family_name_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_family_name_header" />

        <TextView
            android:id="@+id/frag_person_person_user_id_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123456"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_person_user_id_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_family_name_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_person_user_id_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_national_code_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="کد ملی :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_person_user_id_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_person_user_id_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_national_code_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123456"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_national_code_header"
            app:layout_constraintRight_toRightOf="@id/frag_person_person_user_id_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_national_code_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_phone_number_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شماره همراه :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_national_code_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_national_code_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_phone_number_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123456"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_phone_number_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_national_code_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_phone_number_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_amount_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="مبلغ  :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_phone_number_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_phone_number_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_amount_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_amount_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_phone_number_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_amount_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_insert_date_time_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="تاریخ تراکنش :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_amount_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_amount_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_insert_date_time_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_insert_date_time_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_amount_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_insert_date_time_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_payment_link_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="لینک پرداخت :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_insert_date_time_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_insert_date_time_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_payment_link_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_payment_link_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_insert_date_time_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_payment_link_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_psp_type_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شرکت پرداخت :"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_payment_link_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_payment_link_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_psp_type_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_psp_type_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_payment_link_body"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_psp_type_header" />

        <TextView
            android:id="@+id/frag_persons_transaction_list_ipg_response_code_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="نتیجه تراکنش:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_psp_type_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_psp_type_header" />

        <TextView
            android:id="@+id/frag_persons_ipg_response_code_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="test"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_persons_transaction_list_ipg_response_code_header"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_ipg_response_code_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_transaction_list_psp_type_body"/>

        <TextView
            android:id="@+id/frag_persons_transaction_list_TransactionStatus_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="وضعیت تراکنش:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_ipg_response_code_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_ipg_response_code_header" />

        <TextView
            android:id="@+id/frag_persons_TransactionStatus_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_TransactionStatus_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_ipg_response_code_body"/>

        <TextView
            android:id="@+id/frag_persons_transaction_list_description_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="توضیحات:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/frag_persons_transaction_list_TransactionStatus_header"
            app:layout_constraintTop_toBottomOf="@id/frag_persons_transaction_list_TransactionStatus_header" />

        <TextView
            android:id="@+id/frag_persons_description_note_date_body"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/frag_persons_transaction_list_description_header"
            app:layout_constraintRight_toRightOf="@id/frag_persons_TransactionStatus_body"/>

        <FrameLayout
            android:id="@+id/frame_share_link_person"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:padding="7dp"
            app:layout_constraintLeft_toLeftOf="@+id/frag_person_item_btn_expand"
            app:layout_constraintRight_toRightOf="@+id/frag_person_item_btn_expand"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_share_link_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/share_icon" />

        </FrameLayout>
        <ImageView
            android:id="@+id/frag_person_item_btn_isLink"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frag_person_item_btn_expand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_person_item_btn_isLink" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_persons_description_note_date_body" />

        <LinearLayout
            android:id="@+id/lineare_persons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_persons_description_note_date_body">

            <LinearLayout
                android:id="@+id/linearShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:weightSum="2"
                android:gravity="center"
                android:background="@drawable/txt_background_3"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ارسال لینک پرداخت"
                    android:textColor="#06A70E"
                    android:gravity="center"
                    android:layout_weight="1.6"/>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="#00FFFFFF"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp">

                    <Button
                        android:id="@+id/frag_person_item_btn_share_link2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/share_icon"/>
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/frag_person_item_btn_delete2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delete_icon" />
            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_item_person"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_persons_description_note_date_body">

            <Button
                android:id="@+id/frag_person_item_btn_create_link"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/txt_background_2"
                android:gravity="center"
                android:text="تولید لینک پرداخت"
                android:textColor="#437FED"
                android:textSize="16sp" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/frag_person_item_btn_share_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/frag_person_item_btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delete_icon" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>